<!DOCTYPE html>
<html>
  <head>
    <title>Paynow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolink-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.0.1/dist/united/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>

  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <%= render "layouts/admin_navbar" %>
    <% else %>
      <%= render "layouts/user_navbar" %>
    <% end %>
  <% else %>
    <%= render "layouts/navbar" %>
  <% end %>
  <% if notice %>
    <div class="alert alert-dismissible alert-success">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-dismissible alert-warning">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  
    <%= yield %>
  </body>
</html>
