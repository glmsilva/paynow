<main class="card col-lg-3 col-12 text-center container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name))do |f| %>
  <h1>Log in</h1>
  <div class="form-floating">
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email@email.com"%>
    <%= f.label :email%>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "senha aqui" %>
    <%= f.label :password, 'Senha'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
    <%= f.label :remember_me, 'Lembrar-me'  %>
      <%= f.check_box :remember_me %>   
    </div>
  <% end %>

  <div class="actions" id="login">
    <%= f.submit "Entrar", class: 'btn btn-primary login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>

